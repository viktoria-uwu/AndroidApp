<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal App"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/frame1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/frame"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame1"
        app:layout_constraintStart_toStartOf="@+id/frame1"
        app:srcCompat="@drawable/animal1" />

    <TextView
        android:id="@+id/animalName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cat"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/frame1" />


    <TextView
        android:id="@+id/preDescription1"
        android:layout_width="114dp"
        android:layout_height="53dp"
        android:text="A domestic animal, graceful and independent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@+id/animalName1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame1"
        app:layout_constraintEnd_toEndOf="@+id/frame1"
        app:layout_constraintTop_toTopOf="@+id/frame1" />



    <TextView
        android:id="@+id/frame2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/frame"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame2"
        app:layout_constraintStart_toStartOf="@+id/frame2"
        app:srcCompat="@drawable/animal2" />

    <TextView
        android:id="@+id/animalName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/frame2" />

    <TextView
        android:id="@+id/preDescription2"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="A loyal and friendly domestic companion."
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/animalName2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame2"
        app:layout_constraintEnd_toEndOf="@+id/frame2"
        app:layout_constraintTop_toTopOf="@+id/frame2" />



    <TextView
        android:id="@+id/frame3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/frame"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame3"
        app:layout_constraintStart_toStartOf="@+id/frame3"
        app:srcCompat="@drawable/animal3" />

    <TextView
        android:id="@+id/animalName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humster"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/frame3" />

    <TextView
        android:id="@+id/preDescription3"
        android:layout_width="86dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="A small, fluffy rodent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/animalName3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame3"
        app:layout_constraintEnd_toEndOf="@+id/frame3"
        app:layout_constraintTop_toTopOf="@+id/frame3" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/paw" />


</androidx.constraintlayout.widget.ConstraintLayout>